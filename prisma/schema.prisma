generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DataReading {
  timestamp           DateTime @id
  mc_voltage          Float?
  mc_thr_mv           Float?
  mc_motor_temp       Float?
  mc_motor_current    Int?
  mc_motor_torque     Int?
  mc_motor_power      Int?
  coolant_inlet_temp  Float?
  coolant_outlet_temp Float?
  gnss_latitude       Float?
  gnss_longitude      Float?
  gnss_speed          Int?
  gnss_track          Int?
}
